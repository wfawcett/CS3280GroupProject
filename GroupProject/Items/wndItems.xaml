<Window x:Class="GroupProject.Items.wndItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject.Items"
        mc:Ignorable="d"
        Title="wndItems" Height="450" Width="800">
    <Canvas>
        <ListBox x:Name="lbAllItems" Height="339" Canvas.Left="25" Canvas.Top="46" Width="153" SelectionChanged="LbAllItems_SelectionChanged"/>
        <Label x:Name="lblItemCode" Content="Item Code" Canvas.Left="237" Canvas.Top="57"/>
        <Label x:Name="lblItemCodeVal" Content="--" Canvas.Left="321" Canvas.Top="57"/>
        <Label x:Name="label" Content="Description" Canvas.Left="237" Canvas.Top="88"/>
        <TextBox x:Name="tbDescVal" Height="23" Canvas.Left="321" TextWrapping="Wrap" Text="TextBox" Canvas.Top="91" Width="120"/>
        <Label x:Name="label1" Content="Cost" Canvas.Left="237" Canvas.Top="119"/>
        <TextBox x:Name="tbCostVal" Height="23" Canvas.Left="321" TextWrapping="Wrap" Text="TextBox" Canvas.Top="131" Width="120"/>
        <Button x:Name="btnSave" Content="Save" Canvas.Left="366" Canvas.Top="177" Width="75"/>

    </Canvas>
</Window>
